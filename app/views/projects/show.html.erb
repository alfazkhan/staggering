
<div class="container">
  <h1 class="sd-main-heading">Our Projects</h1>

    <div class="row">


      <div class="col-sm-7 col-md-5 col-lg-4 mt-5"></div>


        <div class="col-sm-6 col-md-4 col-lg-3 mt-4">
          <div class="card">

            <%= image_tag(@project.image.url(:medium), class: 'card-img-top') %>
            <div class="card-block">
              <h4 class="card-title"><%= @project.title %></h4>
              <div class="meta">
                <p><i class="fas fa-map-marker-alt"></i>  <%= @project.location %></p>
              </div>
              <div class="card-text">
                <% for k in 0...@project.rating %>
                  <i class="fas fa-star" style="color: yellow"></i>
                <% end %>
              </div>
            </div>
            <div class="card-footer">
              <span class="float-left"><%= @project.client %> </span>
            </div>
          </div>
        </div>
    </div>
</div>