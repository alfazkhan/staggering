
<% i = 0 %>
<div class="container">
  <h1 class="sd-main-heading">Our Projects</h1>
  <% while i < @projects.length %>
    <div class="row">
      <% count = 0 %>
      <% while count < 3 %>
        <% break if i + count > @projects.length - 1 %>


        <div class="col-md-4">

          <div class="card" style="border: 1.5px solid black ">
            <%= image_tag(@projects[i + count].image.url(:medium), class: 'card-img-top') %>
            <div class="card-footer" style="background-color: #F05656">
              <div class="row">
                <div class="col-sm-8"><p style="color: white;font-weight: bold;font-size: medium"><%= @projects[i + count].title %></p>
                </div>
                <div class="col-sm-4">
                  <p style="color: white">&nbsp;&nbsp;&nbsp;&nbsp;<i class="fas fa-map-marker-alt"></i>  <%= @projects[i + count].location %>
                  </p></div>
              </div>

              <div class="row">
                <div class="col-xs-6">
                  &nbsp;&nbsp;
                  <% for k in 0...@projects[i + count].rating %>
                    <i class="fas fa-star" style="color: yellow"></i>
                  <% end %>
                </div>
                <div class="col-sm-5"></div>
                <div class="col-sm-3">
                  <h5 style="color:white;float: right"></h5></div>
              </div>
            </div>
          </div>

          <button class="btn btn-success btn-sm"><%= link_to 'Show', @projects[i + count],style: 'color:white' %></button>
          <button class="btn btn-info btn-sm"><%= link_to 'Edit', edit_project_path(@projects[i + count]),style: 'color:white' %></button>
          <button class="btn btn-danger btn-sm"><%= link_to 'Destroy', @projects[i + count],style: 'color:white', method: :delete, data: {confirm: 'Are you sure?'} %></button>
        </div>


        <% count += 1 %>
      <% end %>
    </div>
    <br><br>
    <% i += 3 %>
  <% end %>

</div>
<button class="btn btn-primary btn-sm"><%= link_to 'New', 'projects/new',style: 'color:white' %></button>