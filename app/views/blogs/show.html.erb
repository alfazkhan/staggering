<% content_for :for_head do %>
  <title>Blog|<%=@blog.title %></title>
<% end %>
<p id="notice"><%= notice %></p>

<div class="" style="margin-top: 2em">
  <div class="text-center" style="padding: 0.8em">

    <h4 class="text-center" style="font-weight: bold"><%= @blog.title.upcase %></h4>
  </div>
  <div class="modal-body">
    <hr>
    <%= markdown(@blog.content) %>
  </div>
  <div class="modal-footer">
    <%= link_to 'Back To Blogs', blogs_path,class: 'btn btn-danger btn-block' %>
  </div>
</div>
