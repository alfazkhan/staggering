<style>
  .btn-gold{
    background-color: #F29900 !important;
  }
</style>

<h1 class="sd-main-heading">Admin Login</h1>
<br><br>

<div class="container">
  <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-8">
      <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |b| %>
        <div class="form-horizontal">


          <div class="form-group">
            <div class="col-sm-2 control-label">
              <%= b.label :UserName %>
            </div>
            <div class="col-sm-10">
              <%= b.text_field :username, class: "form-control", placeholder: "Staggering Admin", autofocus: true %>
            </div>
          </div>


          <div class="form-group">
            <div class="col-sm-2 control-label">
              <%= b.label :Password %>
            </div>
            <div class="col-sm-10">
              <%= b.password_field :password, class: "form-control", placeholder: "********", autocomplete: "off" %>
            </div>
          </div>

          <div class="form-group text-center">
            <div class="col-sm-offset-2 col-sm-10">
              <%= b.submit "Login", class: "btn btn-gold lo-lg" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>