
<div class="" style="margin-top: 5px">
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="2000" data-pause="false">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%if @images.first%>
        <%= image_tag(@images[0].image.url(:slide), class: 'd-block w-100 height', alt:'No Image') %>
      </div>
      <%end%>

      <%if @images.length > 1%>
      <% for i in 1...@images.length%>
      <div class="carousel-item">
        <%= image_tag(@images[i].image.url(:slide), class: 'd-block w-100 height', alt:'No Image') %>
      </div>
      <%end%>
      <%end%>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<div style="height: 200px"></div>